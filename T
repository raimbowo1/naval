-- Get the LocalPlayer
local player = game.Players.LocalPlayer

-- Example destination coordinate (change this to your desired destination)
local destination = Vector3.new(-3, 85, -8125)

-- Function to teleport the player to the specified coordinate
local function teleportPlayer()
    -- Check if the player has a character
    if player.Character then
        -- Check if the player is the owner of the "Large Bomber"
        local largeBomber = workspace["Large Bomber"]
        local ownerValue = largeBomber.Owner.Value

        if ownerValue == player then
            -- Teleport the player or their vehicle
            if player.Character:FindFirstChildOfClass("Humanoid").SeatPart then
                local vehicle = player.Character:FindFirstChildOfClass("Humanoid").SeatPart.Parent
                vehicle:SetPrimaryPartCFrame(CFrame.new(destination))

                -- Anchor the MainBody of the "Large Bomber"
                largeBomber.MainBody.Anchored = true
            else
                player.Character:SetPrimaryPartCFrame(CFrame.new(destination))

                -- Set HumanoidRootPart to be anchored
                local humanoidRootPart = player.Character:WaitForChild("HumanoidRootPart")
                humanoidRootPart.Anchored = true

                -- Anchor the MainBody of the "Large Bomber"
                largeBomber.MainBody.Anchored = true
            end
        else
            -- Teleport the player normally without anchoring the "Large Bomber"
            if player.Character:FindFirstChildOfClass("Humanoid").SeatPart then
                local vehicle = player.Character:FindFirstChildOfClass("Humanoid").SeatPart.Parent
                vehicle:SetPrimaryPartCFrame(CFrame.new(destination))
            else
                player.Character:SetPrimaryPartCFrame(CFrame.new(destination))

                -- Set HumanoidRootPart to be anchored
                local humanoidRootPart = player.Character:WaitForChild("HumanoidRootPart")
                humanoidRootPart.Anchored = true
            end
        end
    end
end

-- Teleport the player to the specified destination
teleportPlayer()
